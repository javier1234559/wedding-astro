<section class="bg-primary text-white py-16 min-h-[40vh] px-2 flex justify-center items-center">
  <div class="container mx-auto text-center">
    <h1 id="wedding-title" class="text-5xl font-bold opacity-0">
      Lễ Cưới của Anh Tuấn & Thu Hương
    </h1>
    <p id="wedding-subtitle" class="mt-4 text-lg opacity-0">
      Hân hạnh mời bạn tham dự lễ cưới của chúng tôi
    </p>
  </div>
</section>

<script >
  import { gsap } from "gsap";
  const timeline = gsap.timeline();

  timeline
    .to("#wedding-title", {
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "sine.out",
    })
    .fromTo(
      "#wedding-title",
      { y: 50 },
      { y: 0, duration: 1, ease: "sine.out" },
      "<"
    )
    .to(
      "#wedding-subtitle",
      {
        opacity: 1,
        y: 0,
        duration: 1,
        ease: "sine.out",
      },
      "-=0.5"
    );
</script>
